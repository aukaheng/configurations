{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./ts/@types"
    ]
  },
  "exclude": [
    "wwwroot"
  ]
}
